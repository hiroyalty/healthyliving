<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">

	<header>
		
	</header>

	<main>
		<div class="container">
			<!--div class="row"-->
				<div class="col-sm-6.col-md-4.col-md-offset-4">
				<!--div class="card text-center"-->
					<h1 class="text-center">Welcome</h1>
						<div class="account-wall">
							<img class="profile-img", src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"></img>
							<form class="form-signin", action='/login', method='POST'>
								<input type="text", name="username", class='form-control', placeholder='Username',required, autofocus></input>
								<input type="password", name="password", class='form-control', placeholder='Password',required></input>
								<button class="btn btn-lg btn-primary btn-block", type="submit">Sign in</button>
							</form>
							<span class="clearfix"></span>
						<a href='/signup', class="text-center new-account"> Create an account</a>
						<% if(message!=null){ %>
							<h3 class="text-center alert alert-danger" role="alert"><%= message %></h3>
						<%}%> 
						</div>
				</div>
			</div>
		<!--/div-->
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>