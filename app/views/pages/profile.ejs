<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">

	<header>
            <% include ../partials/header %>
	</header>

	<main>
            <div class="container">
			<h1 class="text-center">Your Profile Settings</h1>
                        <% if(user!=null){ %>
			<div class="signup-wall">
                        <form class="form-signin">
                            <div class="form-group">
                                <label for="username">Username: <b><%= user.username %></b></label>
                            </div>
                            <div class="form-group">
                                <label for="email">Email: <b><%= user.email %></b></label>
                            </div>
                            <div class="form-group">
                                <label for="firstname">First Name: <b><%= user.firstname %></b></label>                           
                            </div>
                            <div class="form-group">
                                <label for="lastname">Last Name: <b><%= user.lastname %></b></label>                            
                            </div>                                                  
                            <div class="form-group">
                                <% if(datee!=null){ %>
                                    <label for="dateofbirth">Date of Birth: <b><%= datee %></b></label>
                                <%}%>                          
                            </div>
                            <div class="form-group">
                                <label for="height">Height: <b><%= user.height %></b></label>                          
                            </div>
                            <div class="form-group">
                                <label for="weight">Weight: <b><%= user.weight %></b></label>                           
                            </div>                          
                            <div class="form-group">
                                <label for="preference">Your Information preference:</label>
                            <% user.preference.forEach(function(pref) { %>
                            <div class="col-sm-10">
                                <b class="form-control-static"><%= pref %></b>
                            </div>
                            <% }); %>
                            </div>
                            <div class="form-group">
                                <label for="phonenumber">PhoneNumber: <b><%= user.phonenumber %></b></label>                           
                            </div>
                            <div class="form-group">
                                <label for="meansofcontact">Means of Contact: <b><%= user.meansofcontact %></b></label>                          
                            </div>
                            <div class="form-group">
                                <label for="address">Address:</label>
                            <div class="col-sm-10">
                                <b class="form-control-static"><%= user.address.streetaddress %></b>
                            </div>
                            <div class="col-sm-10">
                                <b class="form-control-static"><%= user.address.city %></b>
                            </div>
                            <div class="col-sm-10">
                                <b class="form-control-static"><%= user.address.region %></b>
                            </div>
                            </div>
                            
                            </div>
                                <%}%>
				</div>
		
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>