<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>Live Free</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body style="background-image: url(https://fullhealth.herokuapp.com/img/obamacare-health.jpg)">
    <div class="login-page">
      <div class="form">
        <h1 class="intro"><span>Live Free</span></h1>

        <div class="form-line"></div>
        <div style="margin-top: 18px;">
            <form action="/register" class="adminregister-form" method="post" >
              <input type="text" name="username" placeholder="username"/>
              <input type="password" name="password" placeholder="password"/>
              <select name="role">
                <option value="" disabled selected>Select your option</option>
                <option value="member">Member</option>
                <option value="manager">Manager</option>
                <option value="admin">Administrator</option>
               </select>
              <input type="hidden" name="roomtype" value="public"/>
              <button type="submit">create</button>
              <p class="message">Already registered? <a href="/">Sign In</a></p>
              <% if (errors != null) { %>
                <% errors.forEach(function(err){ %>
                  <p class="message error"><%= err %></p>
                <% }); %>
              <% } %>
            </form>

        </div>
    </div> <!-- end form -->
    </div> <!-- end login container -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    
  </body>
</html>
